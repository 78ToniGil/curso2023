<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- Creamos el formulario -->
    <record id="helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">Helpdesk.tickets.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,assigned,in_process,pending,resolved"/>
                </header>
                <sheet>
                    <div class="oe_tittle">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="date_limit"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="To Do" name="to_do">
                            <field name="actions_todo"/>
                        </page>
                        <page string="Actions" name="actions">
                            <!-- <label for="actions_todo" string="To Do"/> -->
                            <button string="Set all as done" name="set_actions_as_done" type="object"/>
                            <field name="action_ids">
                                <tree string="Actions">
                                    <field name="name"/>
                                    <field name="state"/>
                                </tree>
                                <form>
                                    <button string="Set done" name="set_done" type="object" class="btn-primary"/>
                                    <button string="Set todo" name="set_todo" type="object" class="btn-primary"/>
                                    <group>
                                        <field name="name"/>
                                        <field name="state" readonly="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Creamos la vista -->
    <record id="helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">Helpdesk.tickets.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string="tickets">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="date" optional="show"/>
                <field name="date_limit" optional="hide"/>
                <!-- Estos botones sirven para llamar a los métodos referenciados en la etiqueta "name" -->
                <button string="Update description" name="update_description" type="object" class="btn-primary"/>
                <button string="Update all description" name="update_all_description" type="object" class="btn-primary"/>
            </tree>
        </field>
    </record>
    
    <!-- Creamos la acción -->
    <record id="helpdesk_ticket_action" model="ir.actions.act_window">
        <field name="name">Helpdesk Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un ticket nuevo
            </p>
        </field>
    </record>

    <!-- Creamos el menú -->
    <!-- Este aparece en el menú principal -->
    <menuitem id="helpdesk_menu" name="Helpdesk" sequence="10"/>
    <!-- Este aparece dentro del menú Helpdesk, por el parent enlazado y ejecuta la acción, por el action enlazado -->
    <menuitem id="helpdesk_ticket_open" name="Tickets" sequence="10" parent="helpdesk_menu" action="helpdesk_ticket_action"/>

</odoo>